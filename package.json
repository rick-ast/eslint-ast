{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --fix"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-ast": "workspace:^",
    "lint-staged": "^15.2.4",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}

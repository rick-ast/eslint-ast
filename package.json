{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "release": "node scripts/release.mjs"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-ast": "workspace:^",
    "execa": "^8.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
